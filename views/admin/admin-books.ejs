 <!-- Page Content  -->

       <div class="row">
          <div class="col-sm-12">
             <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between">
                   <div class="iq-header-title">
                      <h4 class="card-title">book Lists</h4>
                   </div>

                   <!-- add new books -->
                       <div class="iq-card-header-toolbar d-flex align-items-center">
                      <a href="/admin/addbooks" class="btn btn-primary">Add New book</a>
                   </div>

                </div>
                <div class="iq-card-body">
                   <div class="table-responsive">
                      <table class="data-tables table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th style="width: 3%;">No</th>
                                <th style="width: 12%;">Book Image</th>
                                <th style="width: 15%;">Book Name</th>
                                <th style="width: 15%;">Book Catrgory</th>
                                <th style="width: 15%;">Book Author</th>
                                <th style="width: 18%;">Book Description</th>
                                <th style="width: 7%;">Book Price</th>
                                <th style="width: 15%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                         
                         <%books.forEach(function(books){%>
                            <tr>
                                <td>1</td>
                                
                                <td><img name="image1" class="img-fluid rounded" src="/product-images/<%=books._id%>.jpg" alt=""></td>
                                <td><%=books.name%></td>
                                <td><%=books.category%></td>
                                <td><%=books.author%></td>
                                <td>
                                  <p class="mb-0"><%=books.description%></p>
                                </td>
                                <td><%=books.price%></td>                                     
                                <td>
                                   <div class="flex align-items-center list-user-action">
                                     <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/admin/edit-book?id=<%=books._id%>"><i class="ri-pencil-line"></i></a>
                                     <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" href="/admin/deletebooks?id=<%=books._id%>"><i class="ri-delete-bin-line"></i></a>
                                  </div>
                                </td>
                            </tr>
                            <%})%>
                            
                            
                        </tbody>
                    </table>
                   </div>
                </div>
             </div>
          </div>
       </div>
 